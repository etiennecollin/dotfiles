should_launch_new_window 0
should_warn_about_user_key_override 1

font_size 16
background_color 0.9 0.9 0.9
dark_mode_background_color 0.1 0.1 0.1
custom_background_color 0.18 0.20 0.25
custom_text_color 1.0 1.0 1.0

show_closest_bookmark_in_statusbar 1
show_close_portal_in_statusbar 1

sort_bookmarks_by_location 1
show_doc_path 1
ruler_mode 1

fit_to_page_width_ratio 0.75
page_separator_width 2

super_fast_search 1
case_sensitive_search 0
prerender_next_page_presentation 1

inverse_search_command nvim --headless -c "VimtexInverseSearch %l '%f'"
startup_commands toggle_custom_color;toggle_horizontal_scroll_lock
